<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>Bean Tracker</h1>

    <table class="entry-table">
        <thead>
            <th>Company</th>
            <th>Category</th>
            <th>Amount</th>
        </thead>

        <tbody>
            <% entries.forEach( el => { %>
                <tr>
                    <td><%= el.company %></td>
                    <td><%= el.category %></td>
                    <td><%= el.amount %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h2><%= user.userName %> has <%= count %> expenses.</h2>
    <h2>Total: $<%= sum %></h2>

    <form action="/entries/createEntry" method='POST'>
        <input type="text" placeholder="Company" name='entryCompany'>
        <input type="text" placeholder="Category" name='entryCategory'>
        <input type="number" placeholder="Amount ($)" name='entryAmount'>
        <input type="submit">
    </form>
    
    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
</body>
</html>